<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <% if locals[:language] and locals[:page_name] and locals[:template_name]%>
      <meta name="page-structure-meta" content="language/page_name[template_name]">
      <meta name="page-structure" content="<%= language %>/<%= page_name %>[<%= template_name %>-template.html.erb]">
    <% end %>
    <title><%= current_page.data.title || 'The Middleman' %></title>
    <%= stylesheet_link_tag 'normalize', 'all' %>
    <%= javascript_include_tag 'all' %>
  </head>

  <body class="<%= page_classes %>">
    <%= yield %>
  </body>
</html>
